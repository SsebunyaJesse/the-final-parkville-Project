meta(charset="UTF-8")
meta(http-equiv="X-UA-Compatible", content="IE=edge")
meta(name="viewport", content="width=device-width,initial-scale=1")
link(rel="stylesheet", type="text/css", href="/css/carTyreClinic.css")
link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  
title Car Tyre Clinic
img.logo(src="/images/parkvillegif2.gif")
.center
  h1 Car Tyre Section
  form#form(action="/carTyreClinic", method="POST", name="entryForm", onsubmit="return validate()")
    .s-category
      .text-danger#tservicecategory
      label#label-servicecategory(for="category") Service Category:
      select#select(name="category")
        option(value="default", selected) (select one option)
        //- option(value="buying tyre") Buying new tyre 
        option(value="tyrepressure") Tyre Pressure -Ugx 500
        option(value="puncture") Puncture fixing -Ugx 5000
        option(value="valves") Valve -Ugx 5000
    .txt-field
      input#tyresize(type="text", name="tyresize")
      span
      label#label-tyresize(for="tyresize") Tyre size
      .text-danger#ttyresize
    .txt-field
      input#tyremake(type="text", name="tyremake")
      span
      label#label-tyremake(for="tyremake") Tyre Make
      .text-danger#ttyremake
    .txt-field
      input#carmodel(type="text", name="carmodel")
      span
      label#label-carmodel(for="carmodel") Car Model
      .text-danger#tcarmodel
    .txt-field
      input#charge(type="text", name="charge")
      span
      label#label-charge(for="charge") Charge
      .text-danger#tcharge
    .submit
      input(type="submit", name="submit", value="submit")

table.table
      thead.thead-dark
        tr
          th(scope='col' class='th') Client name
          th(scope='col' class='th') Phone number
          th(scope='col' class='th') Number plate 
          th(scope='col' class='th') Battery          
      tbody
        if cartyreclinics.length 
        each cartyreclinic in cartyreclinics 


          tr     
          td(class='td') #{battery.username}
          td(class='td') #{battery.phonenumber}
          td(class='td') #{battery.numberplate} 
          td(class='td') #{battery.battery}
          td
script(src="/validation/carTyreClinicValidate.js")