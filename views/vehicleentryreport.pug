doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
  title Document
table.table
          thead.thead-dark
            tr
              th(scope='col' class='th') Client name
              th(scope='col' class='th') Phone number
              th(scope='col' class='th') Number plate 
               th(scope='col' class='th') Battery

              
          tbody
            if batteries.length 
            each battery in batteries 
             tr     
              td(class='td') #{battery.username}
              td(class='td') #{battery.phonenumber}
              td(class='td') #{battery.numberplate} 
              td(class='td') #{battery.battery}
              td