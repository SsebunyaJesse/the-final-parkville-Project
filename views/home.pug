.main-content
  .row.row-cols-1.row-cols-md-3.g-4
    //- .Revenue

    .col
      .card
        img.card-img-top(src="homeimages/parking.jpg"  alt='...')
        .card-body
          h5.card-title Parking Revenue: 
          p.card-text.money
            if vehicleentries
              p vehicleentries #{new vehicleentry.NumberFormat().format(total.totalrevenue)}
    .col
      .card
        img.card-img-top(src='homeimages/tyres.jpg' alt='...')
        .card-body
          h5.card-title Tyre Revenue
          p.card-text
            
    .col
      .card
        img.card-img-top(src='homeimages/battery.jpg'  alt='...')
        .card-body
          h5.card-title Battery Revenue
          p.card-text
     
  .table
          table
            thead
              tr
                th Username
                th Email
                th NIN
                th Gender
                th hw
                th ha
                
            tbody 
                if signups.length 
                each signup in signups
                  tr
                  td #{signup.username}
                  td #{signup.email}
                  td #{signup.nin}
                  td #{signup.gender}

                  td 
                    form(action="/editSignup/", method="GET")
                    input(type='hidden' name='edit' value='edit')
                    button(id='edit' type='submit' name='edit') Edit
                  td
                    form(action="/home/delete/"+signup._id, method="GET")
                    input(type='hidden' name='edit' value='signup._id')
                    button(id='delete' type='submit' name='delete') Delete

