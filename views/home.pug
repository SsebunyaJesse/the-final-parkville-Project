title Parkville parking
 img.logo(src="/images/parkvillegif2.gif")  
.header
  form(action="/form/submit", method="GET")
    //- input.search(type="text", name="text", placeholder="Search for something ")
    //- input.submit(type="submit", name="submit", value="Search")
  .inner-header
   
    .logo-container
      //   <img src="/images/pp-logo.png" alt=""> 
      h2
        | Parkville Parking solutions
        span
    ul.navigation
      
      a(href="/reports")
        li Print Reports
      a(href="https://github.com/SsebunyaJesse")
        li Contact
      a(href="/landingpage")
        li Log out
.sidebar-menu
  ul
    a(href="/batteryHireEntry")
      li Battery Hire Entry
    a(href="/carTyreClinic")
      li Car Tyre Entry
    a(href="/signup")
      li Management Registry
    a(href="/revenueEntry")
      li Revenue
    a(href="/vehicleEntry")
      li Vehicle Entry
    a(href="/departureReceipt")
